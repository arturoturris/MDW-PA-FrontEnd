<%- include('../template/head'); %>
<div class="main-grid">
    <%- include('../template/header.ejs') %>
    <main>
        <section>
            <main>
                <h2 class="display-4">Proyecto 1</h2>
                <div class="row align-items-center">
                    <div class="col-8">
                        <h4>Descripci&oacute;n</h4>
                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Repudiandae veniam voluptatibus numquam corporis nulla quod dolor vero quis dignissimos. Quos unde dignissimos pariatur fugiat quae vel? Aliquid ea perferendis aperiam.</p> 
                    </div>
                    <div class="col-4">
                        <div class="row col-lg-6 col-sm-12 mt-3 ">
                            <p class="col-12"><strong>Responsable: </strong>Alumno responsable</p>
                            <p class="col-12"><strong>Fecha inicio: </strong>12/12/2021</p>
                            <p class="col-12"><strong>Fecha fin: </strong>12/12/2021</p>
                        </div>
                    </div>
                </div>

                <div class="container mt-5">
                    <form action="<%= api %>archivos/<%= id_proyecto %>" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-8">
                            <h3>Asignaci&oacute;n de entregable</h3>
                        </div>
                        
                        <div class="col-4">
                            <input type="submit" class="btn btn-primary btn-block" value="Crear">
                        </div>
                    </div>
                        <div class="form-group mt-5">
                            <div class="form-row">
                                <div class="col-8">
                                    <label for="nombre-entregable">Nombre del entregable</label>
                                    <input type="text" class="form-control" name="nombre-entregable" required>
                                </div>
                                <div class="ml-2 col-4 row align-items-center">
                                    <label for="fecha-entregable">Fecha de entrega</label>
                                    <input type="date" class="form-control" name="fecha-entregable" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="instrucciones-entregable">Instrucciones</label>
                            <textarea  id="" cols="30" rows="5" class="form-control" name="instrucciones-entregable" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="rubrica">Adjuntar rubrica</label>
                            <input type="file" class="form-control-file" name="rubrica" id="rubrica">
                        </div>
                    </form>
                </div>



            </main>
        </section>
    </main>
</div>
<script type="module" src="/public/js/crearEntregable.js"></script>
<%- include('../template/footer.ejs') %>