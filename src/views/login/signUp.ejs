<%- include('../template/head.ejs') %>
<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-lg-6 col-md-6 h-100 d-none d-md-block px-0" id="img-cover">
            <img src="https://images.pexels.com/photos/884788/pexels-photo-884788.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" alt=""  class="img-fluid h-100 w-100">
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xm-12">
            <div class="row h-100 align-items-center">
                <div class="col-12 justify-content-center">
                    <div class="card border border-primary">
                        <div class="card-header text-center display-4 border border-top-0 border-left-0 border-right-0 border-primary">
                            REGISTRO
                        </div>
                        <div class="text-center row aling-items-center justify-content-center d-md-none">
                            <img src="https://images.pexels.com/photos/884788/pexels-photo-884788.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" class="img-fluid w-50" alt="..." id="img-sm-dv">
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <form action="<%= `${apiUrl}` %>" method="POST">
                                    <div class="form-group">
                                        <label for="user">Nombre de usuario:</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-person-square"></i></span>
                                            <input type="text" class="form-control"  placeholder="Nombre" name="nombre" required autofocus>
                                            <input type="text" class="form-control"  placeholder="Apellido paterno" name="paterno" required >
                                            <input type="text" class="form-control"  placeholder="Apellido materno" name="materno" required >
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">E-mail</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-mailbox2"></i></span>
                                            <input type="email" class="form-control" id="email" name="email" required placeholder="E-mail">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Contraseña:</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-file-lock2"></i></span>
                                            <input type="password" class="form-control" id="password" name="contrasena" required placeholder="Contraseña">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="sex">Sexo: </label>
                                        <div class="form-check">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="sexo" id="male" value="H">
                                                <label class="form-check-label" for="male">Hombre</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="sexo" id="female" value="M">
                                                <label class="form-check-label" for="female">Mujer</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Rol:</label>
                                        <div class="form-check">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="rol" id="pupil" value="ALUMNO">
                                                <label class="form-check-label" for="pupil">Alumno</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="rol" id="teacher" value="PROFESOR">
                                                <label class="form-check-label" for="teacher">Profesor</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="id-teacher">Matr&iacute;cula: </label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-briefcase-fill"></i></span>
                                            <input type="text" class="form-control" id="id-teacher" name="matricula" required placeholder="Matrícula">
                                        </div>
                                    </div>
                                    <div class="form-group" id="pupil-option" >
                                        <div class="form-group">
                                            <label for="carrer">Carrera: </label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="sizing-addon1"><i class="bi bi-window"></i></span>
                                                <select class="form-control" name="id_carrera" id="carrer">
                                                    <% for(let carrera of carreras) {%>
                                                        <option value="<%= carrera.id_carrera %>"><%= carrera.nombre %></option>    
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary btn-block" id="submit-btn" value="Registrarse">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script defer src="/public/js/signUp.js"></script>
<%- include('../template/footer.ejs') %>
