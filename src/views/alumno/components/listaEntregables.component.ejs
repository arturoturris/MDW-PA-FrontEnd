<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col" class="text-left">Nombre</th>
                <th scope="col" class="text-center">Fecha asignación</th>
                <th scope="col">Fecha límite</th>
                <th scope="col">Estado</th>
                <th scope="col">Calificación</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% for(let entregable of entregables) {%> 
                <tr>
                    <td scope="row" class="text-left"><%= entregable.nombre %></td>
                    <td><%= entregable.fecha_asignacion %></td>
                    <td><%= entregable.fecha_limite.substring(0,10) %></td>
                    <td><%= entregable.entregado ? 'ENTREGADO' : 'PENDIENTE' %></td>
                    <td><%= entregable.calificacion || '-' %></td>
                    <td>
                        <a href="entregables/<%= entregable.id_entregable %> " class="btn btn-primary">Ver entregable</a>
                    </td>
                </tr>
            <% } %> 
        </tbody>
    </table>
</div>