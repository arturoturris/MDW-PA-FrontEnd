<div class="row">
<% subjects.forEach(function(subject){ %>
    <div class="col-lg-3 col-md-6 col-sm-12 mb-2">
        <div class="card border border-primary">
            <img class="card-img-top" src="/public/img/codigo.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= subject.name %></h5>
                <p class="card-text"><strong>Periodo: </strong><%= subject.term %></p>
                <p class="card-text"><strong>NRC: </strong><%= subject.NRC %></p>
                <a href="/dashboard/<%= subject.NRC %>" class="btn btn-primary">Ver proyectos activos</a>
            </div>
        </div>
    </div>
<% }); %>
</div>
      