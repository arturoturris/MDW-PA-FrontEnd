<%- include('../template/head.ejs') %>
<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-lg-6 col-md-6 h-100 d-none d-md-block px-0">
            <img src="https://images.pexels.com/photos/884788/pexels-photo-884788.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" alt="" class="img-fluid h-100 w-100">
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xm-12">
            <div class="row h-100 align-items-center">
                <div class="col-12 justify-content-center">
                    <div class="card border border-primary">
                        <div class="card-header text-center display-4 border border-top-0 border-left-0 border-right-0 border-primary">
                            REGISTRO
                        </div>
                        <div class="text-center row aling-items-center justify-content-center d-md-none">
                            <img src="https://images.pexels.com/photos/884788/pexels-photo-884788.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" class="img-fluid w-50" alt="..." id="img-sm-dv">
                        </div>
                        <div class="card-body">
                            <did class="card-text">
                                <form action="" method="POST">
                                    <div class="form-group">
                                        <label for="user">Nombre de usuario:</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-person-square"></i></span>
                                            <input type="text" class="form-control"  placeholder="Nombre" name="name" required autofocus>
                                            <input type="text" class="form-control"  placeholder="Apellido paterno" name="flastname" required >
                                            <input type="text" class="form-control"  placeholder="Apellido materno" name="mlastname" required >
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="email">E-mail</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-mailbox2"></i></span>
                                            <input type="email" class="form-control" id="email"  name="email" required placeholder="E-mail">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Contraseña:</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-file-lock2"></i></span>
                                            <input type="password" class="form-control" id="password"  name="password" required placeholder="Contraseña">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="sex">Sexo: </label>
                                        <div class="form-check">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="sex" id="male" value="0">
                                                <label class="form-check-label" for="male">Hombre</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="sex" id="female" value="1">
                                                <label class="form-check-label" for="female">Mujer</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Rol:</label>
                                        <div class="form-check">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="role" id="pupil" value="0">
                                                <label class="form-check-label" for="pupil">Alumno</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="role" id="teacher" value="1">
                                                <label class="form-check-label" for="teacher">Profesor</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group" id="teacher-option" >
                                        <label for="id-teacher">ID de trabajador: </label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-briefcase-fill"></i></span>
                                            <input type="text" class="form-control" id="id-teacher" name="id-teacher" required placeholder="ID de trabajador">
                                        </div>
                                    </div>
                                    <div class="form-group" id="pupil-option" >
                                        <div class="form-group">
                                            <label for="enrollment">Matr&iacute;cula: </label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="sizing-addon1"><i class="bi bi-book-half"></i></span>
                                                <input type="text" class="form-control" id="enrollment" name="enrollment" required placeholder="Matrícula">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="carrer">Carrera: </label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="sizing-addon1"><i class="bi bi-window"></i></span>
                                                <select class="form-control" name="carrer" id="carrer">
                                                    <option value="ICC">Ingeniería en Ciencias de la Computación</option>
                                                    <option value="LCC">Licenciatura en Ciencias de la Computación</option>
                                                    <option value="ITI">Ingeniería en Tecnologías de la Información</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group bd-danger" id="user-encontrado">
                                        <div class="alert alert-danger alert-dismissible">
                                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                                            <strong>usuario o contraseña incorrectos</strong> 
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btm btn-primary btn-block" id="submit-btn" value="Registrarse">
                                    </div>
                                </form>
                            </did>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script defer src="/public/js/register.js"></script>
