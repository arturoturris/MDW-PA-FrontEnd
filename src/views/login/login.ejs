<%- include('../template/head.ejs') %>
<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-lg-6 col-md-6 h-100 d-none d-md-block px-0">
            <img src="https://images.pexels.com/photos/884788/pexels-photo-884788.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" alt="" id="img-cover" class="img-fluid h-100 w-100">
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xm-12">
            <div class="row h-100 align-items-center">
                <div class="col-12 justify-content-center">
                    <div class="card border border-primary">
                        <div class="card-header text-center display-4 border border-top-0 border-left-0 border-right-0 border-primary">
                            INICIAR SESI&Oacute;N
                        </div>
                        <div class="text-center row aling-items-center justify-content-center d-md-none">
                            <img src="https://images.pexels.com/photos/884788/pexels-photo-884788.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500" class="img-fluid w-50" alt="..." id="img-sm-dv">
                        </div>
                        <div class="card-body">
                            <did class="card-text">
                                <form action="<%= `${apiUrl}login` %>" method="POST">
                                    <div class="form-group">
                                        <label for="user">Email:</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-person-square"></i></span>
                                            <input type="email" class="form-control" id="user"placeholder="Email" name="email" required autofocus>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Contraseña:</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="sizing-addon1"><i class="bi bi-file-lock2"></i></span>
                                            <input type="password" class="form-control" id="password" name="contrasena" required placeholder="Contraseña">
                                        </div>
                                    </div>
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <p>Crea una cuenta <a href="/registro">aqu&iacute;</a></p>
                                        </label>
                                    </div>
                                    <div class="form-group bd-danger" id="user-encontrado">
                                        
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btm btn-primary btn-block" id="submit-btn" value="Entrar">
                                    </div>
                                </form>
                            </did>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="module" src="/public/js/signIn.js"></script>
<%- include('../template/footer.ejs') %>
